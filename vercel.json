{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "vite",
  "installCommand": "bun install",
  "buildCommand": "turbo run web#build server#build && cp -r ../web/dist ./",
  "outputDirectory": "dist",
  "cleanUrls": true,

  "rewrites": [
    { "source": "/assets/(.*)", "destination": "/assets" },
    { "source": "/rpc(.*)", "destination": "/index" },
    { "source": "/api(.*)", "destination": "/index" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
