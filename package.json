{
  "name": "base",
  "private": true,
  "workspaces": ["apps/*", "packages/*", "tools/*"],
  "scripts": {
    "new": "turbo gen",
    "dev:_": "",
    "dev": "turbo dev",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "test:_": "",
    "test": "turbo run test --affected",
    "test:ci": "turbo test --ci",
    "test:coverage": "turbo test --coverage",
    "test:watch": "turbo test --watch",
    "quality:_": "",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "type-check": "turbo run type-check --affected",
    "up-deps": "bunx taze -r -w minor",
    "up-deps:major": "bunx taze -r -w major",
    "clean": "git clean -xdf node_modules",
    "boundaries": "turbo boundaries",
    "db:_": "",
    "db:push": "turbo -F server db:push",
    "db:studio": "turbo -F server db:studio",
    "db:generate": "turbo -F server db:generate",
    "db:migrate": "turbo -F server db:migrate",
    "build:_": "",
    "build": "turbo run build --affected",
    "build:web": "turbo -F web build",
    "build:server": "turbo -F server build",
    "build:docs": "turbo -F docs build",
    "docker:_": "",
    "docker:build": "docker build -f ./apps/server/Dockerfile -t base:dev .",
    "docker:run": "docker run --env-file ./apps/server/.env -p 3000:3000 base:dev"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@happy-dom/global-registrator": "^17.6.3",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@turbo/gen": "^2.5.4",
    "@types/bun": "^1.2.16",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript/native-preview": "^7.0.0-dev.20250612.1",
    "react-test-renderer": "^19.1.0",
    "taze": "^19.1.0",
    "turbo": "^2.5.4"
  },
  "packageManager": "bun@1.2.16"
}
