{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/src/index.js",
    "build": "tsc && tsc-alias",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@base/ai": "workspace:^",
    "@base/api": "workspace:",
    "@base/auth": "workspace:",
    "@base/db": "workspace:",
    "@scalar/hono-api-reference": "^0.9.3",
    "@scalar/openapi-to-markdown": "^0.2.7",
    "dotenv": "^16.5.0",
    "hono": "^4.7.11"
  },
  "devDependencies": {
    "@types/bun": "^1.2.15",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.8.3"
  }
}
