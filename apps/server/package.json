{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsc && tsc-alias",
    "check-types": "tsc --noEmit",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/src/index.js",
    "_db:push": "drizzle-kit push",
    "_db:studio": "drizzle-kit studio",
    "_db:generate": "drizzle-kit generate",
    "_db:migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "@better-auth/expo": "^1.2.8",
    "@orpc/client": "^1.3.0",
    "@orpc/server": "^1.3.0",
    "better-auth": "^1.2.8",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.43.1",
    "hono": "^4.7.10",
    "pg": "^8.16.0",
    "zod": "^3.25.31"
  },
  "devDependencies": {
    "@types/bun": "^1.2.14",
    "@types/pg": "^8.15.2",
    "drizzle-kit": "^0.31.1",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.8.3"
  }
}
