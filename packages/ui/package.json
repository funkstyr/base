{
  "name": "@base/ui",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "default": "./src/*.ts"
    },
    "./web.css": "./src/styles/web.css",
    "./postcss.config": "./postcss.config.mjs",
    "./lib/*": {
      "types": "./dist/lib/*.d.ts",
      "default": "./src/lib/*.ts"
    },
    "./components/*": {
      "types": "./dist/components/*.d.ts",
      "default": "./src/components/*.tsx"
    },
    "./hooks/*": {
      "types": "./dist/hooks/*.d.ts",
      "default": "./src/hooks/*.ts"
    }
  },
  "scripts": {
    "add": "bunx --bun shadcn@canary add",
    "dev": "tsc --watch",
    "build": "tsc && tsc-alias",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
